{
  "compilerOptions": {
    "target": "es2016",                                      /* Set the JavaScript language version for emitted JavaScript */
    "module": "commonjs",                                      /* Specify module code generation */
    "outDir": "./dist",                                        /* Specify output folder for emitted files */
    "esModuleInterop": true,                                   /* Enable interop between CommonJS and ES6 modules */
    "forceConsistentCasingInFileNames": true,                  /* Ensure consistent casing in imports */
    "strict": true,                                            /* Enable all strict type-checking options */
    "skipLibCheck": true,                                      /* Skip type checking of declaration files */
    "resolveJsonModule": true,                                 /* Allow importing JSON files */
    "noImplicitAny": true,                                     /* Raise error on expressions with 'any' type */
    "noUnusedLocals": true,                                    /* Report unused variables */
    "noUnusedParameters": true,                                /* Report unused function parameters */
    "noImplicitReturns": true,                                 /* Report missing return statements */
    "noFallthroughCasesInSwitch": true,                        /* Report fallthrough cases in switch statements */
    "baseUrl": "./src",                                        /* Set base directory for module resolution */
    "paths": {
      "*": ["node_modules/*", "src/types/*"]                   /* Allow for resolving custom types */
    }
  },
  "include": [
    "src/**/*",                                                /* Include all files inside the 'src' folder */
    "src/types/**/*.d.ts"                                       /* Include all custom type declaration files */
  ]
}
